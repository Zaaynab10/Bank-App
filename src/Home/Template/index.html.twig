  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
  <style>
    :root {
      --primary-color: #8B1C2B;
      --accent-color: #ffc107;
      --light-bg: #f5f5f5;
      --dark-text: #212121;
    }
    
    * {
      font-family: 'Segoe UI', Roboto, sans-serif;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      scroll-behavior: smooth;
      transition: background 0.3s, color 0.3s;
    }
    
    body {
      background: var(--light-bg);
      color: var(--dark-text);
    }
    
    a {
      text-decoration: none;
      color: inherit;
    }
    
    /* HEADER */
    header {
      background: var(--primary-color);
      color: white;
      padding: 1.5rem 5%;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    
    /* Logo et slogan */
    .logo {
      display: flex;
      align-items: center;
    }
    
    .bank-logo {
      max-height: 50px;
    }
    
    .header-slogan {
      font-size: 1.2rem;
      margin: 0 2rem;
      font-style: italic;
    }
    
    .cta-buttons {
      display: flex;
      align-items: center;
      gap: 1rem;
    }
    
    .cta-buttons .btn {
      background: rgba(255,255,255,0.15);
      border: 1px solid rgba(255,255,255,0.2);
      padding: 0.5rem 1.2rem; 
      font-size: 1.1rem;
      border-radius: 30px;
      backdrop-filter: blur(5px);
      transition: all 0.3s ease;
      color: white;
      display: inline-flex;
      align-items: center;
    }
    
    .cta-buttons .btn:hover {
      background: rgba(255,255,255,0.3);
      transform: scale(1.05);
    }
    
    .intro-section {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      max-width: 1200px;
      margin: 5rem auto;
      padding: 0 5%;
      align-items: center;
    }
    
    .intro-description h2 {
      font-size: 2.5rem;
      color: var(--primary-color);
      margin-bottom: 1.5rem;
    }
    
    .intro-description p {
      font-size: 1.1rem;
      line-height: 1.6;
      margin-bottom: 2rem;
    }
    
    .intro-description .btn {
      background: var(--primary-color);
      color: white;
      padding: 1rem 2rem;
      border-radius: 30px;
      font-weight: bold;
      display: inline-block;
    }
    
    .intro-description .btn:hover {
      transform: translateY(-2px);
    }
    
    .intro-img img {
      width: 100%;
      border-radius: 8px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }
    
    .features {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 2rem;
  perspective: 1000px; /* N√©cessaire pour le flip */
}

.feature-card {
  background: transparent;
  border-radius: 15px;
  perspective: 1000px;
  cursor: pointer;
}

.feature-inner {
  position: relative;
  width: 100%;
  height: 300px;
  text-align: center;
  transition: transform 0.8s;
  transform-style: preserve-3d;
}

.feature-card:hover .feature-inner {
  transform: rotateY(180deg);
}

.feature-front, .feature-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  background: white;
  border-radius: 15px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 2rem;
}

.feature-front img {
  max-height: 60px;
  margin-bottom: 1.5rem;
  filter: drop-shadow(0 5px 5px rgba(139, 28, 43, 0.2));
}

.feature-back {
  transform: rotateY(180deg);
  background: var(--primary-color);
  color: white;
  font-size: 1rem;
  line-height: 1.5;
}

    .testimonials-section {
      background: var(--light-bg);
      padding: 6rem 5%;
    }
    
    .testimonials-section h2 {
      text-align: center;
      font-size: 2rem;
      color: var(--primary-color);
      margin-bottom: 4rem;
    }
    
    .testimonials {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }
    
    .testimonial {
      background: white;
      border-radius: 15px;
      padding: 2rem;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
    }
    
    footer {
      background: var(--primary-color);
      color: white;
      padding: 2rem;
      text-align: center;
    }
    
    @media (max-width: 768px) {
      .intro-section {
        grid-template-columns: 1fr;
      }
      
      .features {
        grid-template-columns: 1fr;
      }
      
      .header-slogan {
        display: none;
      }
    }
  </style>
</head>

